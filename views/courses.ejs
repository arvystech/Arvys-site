<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Courses - ARVYS Tech Academy</title>

    <!-- Fonts and Styles -->
    <link href="/assets/vendors/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link
      href="/assets/vendors/bootstrap-icons/font/bootstrap-icons.min.css"
      rel="stylesheet"
    />
    <link href="/assets/vendors/aos/aos.css" rel="stylesheet" />

    <!-- Theme Styles -->
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/courses.css" />

    <!-- Theme Script -->
    <script>
      (function () {
        const storedTheme = localStorage.getItem("theme") || "light";
        document.documentElement.setAttribute("data-bs-theme", storedTheme);
      })();
    </script>
    <style>
      .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    </style>
  </head>

  <body>
    <!-- Modern Page Loader -->
    <div class="page-loader" id="pageLoader">
      <div class="loader-content">
        <img
          src="assets/public/IMAGES/logos/footer-logo.svg"
          alt="ARVYS Logo"
          class="loader-logo"
        />
        <div class="spinner"></div>
        <div class="loader-text">LOADING</div>
        <div class="loader-progress"></div>
      </div>
    </div>

    <div class="site-wrap">
      <!-- Header -->
      <header
        class="fbs__net-navbar navbar navbar-expand-lg dark position-fixed"
        aria-label="Navbar"
      >
        <div
          class="container d-flex align-items-center justify-content-between"
          style="height: 60px"
        >
          <a class="navbar-brand w-auto" href="/">
            <img
              class="logo dark img-fluid"
              src="assets/public/IMAGES/logos/logo.svg"
              alt="Logo"
            />
            <img
              class="logo light img-fluid"
              src="assets/public/IMAGES/logos/footer-logo.svg"
              alt="Logo"
            />
          </a>

          <div
            class="offcanvas offcanvas-start w-75"
            id="fbs__net-navbars"
            tabindex="-1"
          >
            <div class="offcanvas-header">
              <a class="logo-link" id="fbs__net-navbarsLabel" href="/">
                <img
                  class="logo dark img-fluid"
                  src="assets/public/IMAGES/logos/footer-logo.svg"
                  alt="Logo"
                />
                <img
                  class="logo light img-fluid"
                  src="assets/public/IMAGES/logos/logo.svg"
                  alt="Logo"
                />
              </a>
              <button
                class="btn-close btn-close-black"
                type="button"
                data-bs-dismiss="offcanvas"
              ></button>
            </div>

            <div class="offcanvas-body align-items-lg-center">
              <ul
                class="navbar-nav nav me-auto ps-lg-5 mb-2 mb-lg-0 mx-auto text-center fw-bold"
              >
                <li class="nav-item">
                  <a class="nav-link scroll-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link scroll-link" href="/about">About Us</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link scroll-link active" href="/courses"
                    >Courses</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link scroll-link" href="/industrial-training"
                    >Industrial Training</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link scroll-link" href="/staffs">Team</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link scroll-link" href="/it-register"
                    >Register</a
                  >
                </li>
              </ul>
            </div>
          </div>

          <div class="d-flex align-items-center gap-2 sign-btns">
            <a
              class="p-0 text-black"
              href="/login"
              style="text-decoration: none"
              >Log In</a
            >
            <a
              class="btn rounded-pill px-3 btn-sm d-flex align-items-center"
              style="color: white !important; height: 30px"
              href="/it-register"
              >Register</a
            >

            <button
              class="fbs__net-navbar-toggler ms-2"
              data-bs-toggle="offcanvas"
              data-bs-target="#fbs__net-navbars"
            >
              <svg
                class="fbs__net-icon-menu"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <line x1="21" y1="6" x2="3" y2="6"></line>
                <line x1="15" y1="12" x2="3" y2="12"></line>
                <line x1="17" y1="18" x2="3" y2="18"></line>
              </svg>
            </button>
          </div>
        </div>
      </header>

      <!-- Hero Section -->
      <section class="courses-hero">
        <div class="container text-center" data-aos="fade-up">
          <h1 class="display-4 fw-bold mb-3 text-white">Explore Our Courses</h1>
          <p
            class="lead mb-4 text-white"
            style="max-width: 700px; margin: 0 auto; opacity: 0.9"
          >
            Transform your career with industry-leading tech courses designed by
            experts. Learn practical skills that matter.
          </p>
        </div>
      </section>

      <!-- Stats Section -->
      <section class="stats-section">
        <div class="container">
          <div class="row" data-aos="fade-up" data-aos-delay="200">
            <div class="col-6 col-md-3">
              <div class="stat-card">
                <div class="stat-number">15+</div>
                <div class="stat-label">Active Courses</div>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="stat-card">
                <div class="stat-number">500+</div>
                <div class="stat-label">Students Enrolled</div>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="stat-card">
                <div class="stat-number">20+</div>
                <div class="stat-label">Expert Instructors</div>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="stat-card">
                <div class="stat-number">4.8</div>
                <div class="stat-label">Average Rating</div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Filter Section -->
      <section class="py-4 bg-white border-bottom">
        <div class="container">
          <div class="d-flex flex-wrap justify-content-center gap-2 mb-0">
            <button class="filter-pill active" data-filter="all">All Courses</button>
            <button class="filter-pill" data-filter="beginner">Beginner</button>
            <button class="filter-pill" data-filter="intermediate">Intermediate</button>
            <button class="filter-pill" data-filter="advanced">Advanced</button>
          </div>
        </div>
      </section>

      <!-- Courses Grid -->
      <section class="py-5 bg-light">
        <div class="container pb-5">
          <div class="row g-4" id="coursesGrid">
            <% if (courses && courses.length > 0) { %>
              <% courses.forEach((course, index) => { %>
                <div
                  class="col-md-6 col-lg-4 course-item"
                  data-level="<%= course.level ? course.level.toLowerCase() : 'beginner' %>"
                  data-aos="fade-up"
                  data-aos-delay="<%= index * 100 %>"
                >
                  <a href="/course-details/<%= course.slug %>" class="text-decoration-none">
                    <div class="course-card">
                      <div class="overflow-hidden">
                        <img
                          src="<%= course.image_path ? course.image_path : '/assets/images/business/business-img-2-min.jpg' %>"
                          alt="<%= course.title %>"
                          class="course-img"
                        />
                      </div>
                      <div class="course-content">
                        <span class="course-badge <%= course.level ? course.level.toLowerCase() : 'beginner' %>">
                          <%= course.level %>
                        </span>
                        <h5 class="course-title"><%= course.title %></h5>
                        <p class="course-desc text-truncate-2">
                          <%= course.tagline %>
                        </p>
                        <div class="course-meta">
                          <span><i class="bi bi-clock me-1"></i> <%= course.duration %></span>
                          <span>
                            <% if (course.availability === 'available') { %>
                              <i class="bi bi-shield-check me-1"></i>
                            <% } else if (course.availability === 'coming soon') { %>
                              <i class="bi bi-hourglass-split me-1 text-warning"></i>
                            <% } else { %>
                              <i class="bi bi-lock me-1 text-danger"></i>
                            <% } %>
                            <%= course.availability %>
                          </span>
                        </div>
                        <div class="course-price">â‚¦<%= course.price ? Number(course.price).toLocaleString() : 'Negotiable' %></div>
                      </div>
                    </div>
                  </a>
                </div>
              <% }); %>
            <% } else { %>
              <div class="col-12 text-center py-5">
                <i class="bi bi-journal-x display-1 text-muted"></i>
                <h3 class="mt-3">No courses found</h3>
                <p>Check back later for new course offerings!</p>
              </div>
            <% } %>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <footer class="py-5 custom-footer" id="footer">
        <div class="container">
          <div class="row g-4 align-items-start">
            <div class="col-lg-4">
              <img
                src="assets/public/IMAGES/logos/footer-logo.svg"
                alt="ARVYS Logo"
                class="img-fluid mb-3"
                style="max-width: 120px"
              />
              <h2 class="mb-0 text-white">
                The No. 1 Tech Academy for tertiary students.
              </h2>
              <p class="text-white small" style="width: 85%">
                At ARVYS, we operate with the belief that excellence is
                attainable through consistency.
              </p>
            </div>

            <div class="col-6 col-lg-2">
              <h6 class="fw-semibold mb-3 text-white">Quick Links</h6>
              <ul class="list-unstyled">
                <li>
                  <a href="/" class="text-decoration-none text-white">Home</a>
                </li>
                <li>
                  <a href="/courses" class="text-decoration-none text-white"
                    >Courses</a
                  >
                </li>
                <li>
                  <a href="/staffs" class="text-decoration-none text-white"
                    >Team</a
                  >
                </li>
                <li>
                  <a
                    href="/industrial-training"
                    class="text-decoration-none text-white"
                    >Industrial Training</a
                  >
                </li>
              </ul>
            </div>

            <div class="col-6 col-lg-2">
              <h6 class="fw-semibold mb-3 text-white">Company</h6>
              <ul class="list-unstyled">
                <li>
                  <a href="/about" class="text-decoration-none text-white"
                    >About Us</a
                  >
                </li>
                <li>
                  <a href="/#contact" class="text-decoration-none text-white"
                    >Contact Us</a
                  >
                </li>
                <li>
                  <a href="/it-register" class="text-decoration-none text-white"
                    >Register</a
                  >
                </li>
              </ul>
            </div>

            <div class="col-lg-4">
              <h6 class="fw-semibold mb-3 text-white">Join Our Newsletter</h6>
              <form class="input-group">
                <input
                  type="email"
                  class="form-control bg-white rounded-start-pill"
                  placeholder="Enter your email"
                  required
                />
                <button
                  type="submit"
                  class="btn rounded-end-pill"
                  style="background-color: #6c65ef"
                >
                  Subscribe
                </button>
              </form>
              <div class="mt-3">
                <img src="./assets/public/IMAGES/footer-circle.svg" alt="" />
                <img src="./assets/public/IMAGES/footer-circle.svg" alt="" />
                <img src="./assets/public/IMAGES/footer-circle.svg" alt="" />
              </div>
            </div>
          </div>

          <hr class="my-4 border-muted" />

          <div class="text-center small text-white">
            &copy;
            <script>
              document.write(new Date().getFullYear());
            </script>
            ARVYS. All Rights Reserved.
          </div>
        </div>
      </footer>
    </div>

    <!-- Scripts -->
    <script src="/assets/vendors/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="/assets/vendors/aos/aos.js"></script>
    <script src="/assets/js/page-loader.js"></script>

    <script>
      // Init AOS
      AOS.init({
        duration: 800,
        easing: "ease-in-out",
        once: true,
        mirror: false,
      });

      // Course filtering logic
      const filterPills = document.querySelectorAll(".filter-pill");
      const courseItems = document.querySelectorAll(".course-item");

      filterPills.forEach((pill) => {
        pill.addEventListener("click", () => {
          // Remove active from all
          filterPills.forEach((p) => p.classList.remove("active"));
          // Add active to clicked
          pill.classList.add("active");

          const filter = pill.dataset.filter.toLowerCase();

          courseItems.forEach((item) => {
            const itemLevel = item.dataset.level.toLowerCase();
            
            if (filter === "all" || itemLevel === filter) {
              item.classList.remove('d-none');
              setTimeout(() => {
                item.style.opacity = "1";
                item.style.transform = "scale(1)";
              }, 10);
            } else {
              item.style.opacity = "0";
              item.style.transform = "scale(0.95)";
              setTimeout(() => {
                item.classList.add('d-none');
              }, 300);
            }
          });

          // Refresh AOS animations for visible items
          setTimeout(() => {
            AOS.refresh();
          }, 350);
        });
      });
    </script>
  </body>
</html>
